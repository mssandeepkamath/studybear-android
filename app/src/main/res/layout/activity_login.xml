<?xml version="1.0" encoding="utf-8"?>

<!--
scrollView
    linear layout
        widgets
        relative layout
-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parentViewLogin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".activity.activity.LoginActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCompanyLogo"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25sdp"
                android:contentDescription="@string/company_logo"
                android:src="@drawable/company_logo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo_bhai"
                android:text="@string/sign_in"
                android:textColor="@color/black"
                android:textSize="@dimen/_35sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:text="@string/welcome_to_study_bear"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

         <ProgressBar
             android:id="@+id/barProgress"
             android:layout_width="@dimen/_75sdp"
             android:layout_height="@dimen/_75sdp"
             android:layout_gravity="center"
             android:layout_marginTop="@dimen/_50sdp"
             android:layout_marginBottom="@dimen/_50sdp"
             android:indeterminateTint="@color/black"
             />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/cardSignIn">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/browser_actions_bg_grey"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/imgButtonGoogle"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/google_logo"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/sign_in_with_google"
                        android:textAlignment="center"
                        android:textSize="@dimen/_17sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="sans-serif-light"
                android:text="@string/email_note"
                android:textColor="@color/red"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privileged_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:foreground="?attr/selectableItemBackground"
                android:minHeight="48dp"
                android:padding="@dimen/_4sdp"
                android:text="@string/privileged_access"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal"
                />





        </LinearLayout>








</ScrollView>