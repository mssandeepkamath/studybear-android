                <com.skydoves.powerspinner.PowerSpinnerView
                    android:id="@+id/spinnerRazor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/card_border"
                    android:fontFamily="@font/roboto"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:spinner_arrow_drawable="@drawable/ic_arrow"
                    app:spinner_arrow_gravity="end"
                    app:spinner_arrow_show="true"
                    android:hint="@string/choose_your_semester"
                    app:spinner_arrow_tint="@color/black"
                    app:spinner_divider_color="@color/text_grey"
                    app:spinner_divider_show="true"
                    app:spinner_item_array="@array/semesters"
                    app:spinner_item_height="@dimen/_50sdp"
                    app:spinner_popup_animation="dropdown"
                    app:spinner_popup_background="@color/white"
                    app:spinner_popup_elevation="1dp" />

                <Button
                    android:id="@+id/btnRazorPay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:text="@string/procced_to_payment"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:textStyle="bold"
                    android:background="@drawable/card_border"
                    android:backgroundTint="#0192EC"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/note_we_do_not_sell_your_data"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/company_logo"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_marginTop="@dimen/_5sdp"
            />
