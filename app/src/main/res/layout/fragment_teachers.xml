<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.fragment.TeachersFragment">


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_10sdp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5634416739025689/7170635085" />




    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/lytRefreshTeachers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/adView6"
        >



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vwRecyclerViewTeachers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            />


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



    <RelativeLayout
        android:id="@+id/lytProgressTeachers"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ProgressBar
            android:id="@+id/barProgressTeachers"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:indeterminateTint="@color/black"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/txtErrorTeachers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_are_sorry_please_try_again"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp"
            />

    </RelativeLayout>

</RelativeLayout>