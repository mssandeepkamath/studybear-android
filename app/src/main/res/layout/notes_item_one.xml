<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        android:layout_margin="@dimen/_15sdp"
        app:cardBackgroundColor="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:padding="@dimen/_10sdp"
                android:id="@+id/txtNotesTitleOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/roboto"
                />

            <com.skydoves.powerspinner.PowerSpinnerView
                app:fontFamily="@font/roboto"
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/spinnerUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/card_border"
                android:fontFamily="@font/roboto"
                android:maxHeight="@dimen/_500sdp"
                android:hint="@string/choose_a_unit"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal"
                app:spinner_arrow_drawable="@drawable/ic_arrow"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_show="true"
                app:spinner_arrow_tint="@color/black"
                app:spinner_divider_color="@color/text_grey"
                app:spinner_divider_show="true"
                app:spinner_item_array="@array/semesters"
                app:spinner_item_height="@dimen/_50sdp"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@color/white"
                app:spinner_popup_elevation="1dp" />

            <Button
                android:id="@+id/btnNotesOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="@string/proceed"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/roboto"
                android:backgroundTint="#030F41"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>






</LinearLayout>